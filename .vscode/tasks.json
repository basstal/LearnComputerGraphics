{
	"version": "2.0.0",
	"tasks": [
		{
			"type":"shell",
			"label": "mkdir",
			"command":"rm -r build; mkdir build",
		},
		{
			"type": "shell",
			"label": "cl-build",
			"command": "cl.exe",
			"args": [
				"/MDd",
				"/I${workspaceFolder}/Src/include/",
				"/I${workspaceFolder}/Plugins/glfw-3.3.2.bin.WIN32/include/GLFW/",
				"/EHsc",
				"/Fe:",
				"${workspaceFolder}/build/output.exe",
				"${workspaceFolder}/Src/glad.c",
				"${file}",
				"/link ${workspaceFolder}/Plugins/glfw-3.3.2.bin.WIN32/lib-vc2019/glfw3.lib",
				"C:/Program Files (x86)/Windows Kits/10/Lib/10.0.17763.0/um/x86/OpenGL32.Lib",
				"C:/Program Files (x86)/Windows Kits/10/Lib/10.0.17763.0/um/x86/kernel32.Lib",
				"C:/Program Files (x86)/Windows Kits/10/Lib/10.0.17763.0/um/x86/User32.Lib",
				"C:/Program Files (x86)/Windows Kits/10/Lib/10.0.17763.0/um/x86/Gdi32.Lib",
				"C:/Program Files (x86)/Windows Kits/10/Lib/10.0.17763.0/um/x86/Shell32.lib",
				"/NODEFAULTLIB:MSVCRT.LIB",
			],
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"problemMatcher": [
				"$msCompile"
			],
		},
		{
			"label": "build",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn":[
				"mkdir",
				"cl-build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}